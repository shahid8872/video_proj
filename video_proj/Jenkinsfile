pipeline {
    agent any

    environment {
        DOTNET_ROOT = "/usr/share/dotnet"
        PATH = "${DOTNET_ROOT}:${env.PATH}"
    }

    tools {
        // If using Jenkins tool config
        dotnet 'dotnet8'
    }

    triggers {
        githubPush() // This enables GitHub webhook to auto-trigger builds
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/shahid8872/video_proj'
            }
        }

        stage('Restore') {
            steps {
                sh 'dotnet restore'
            }
        }

        stage('Build') {
            steps {
                sh 'dotnet build --no-restore'
            }
        }

        stage('Test') {
            steps {
                sh 'dotnet test --no-build --verbosity normal'
            }
        }

        stage('Publish') {
            steps {
                sh 'dotnet publish -c Release -o out'
            }
        }

        stage('Deploy') {
            steps {
                // Customize according to deployment target
                // Example: copy to server
                sh 'scp -r out/* user@server:/var/www/myapi'
                // Or: docker build & push, or use rsync, or Azure CLI, etc.
            }
        }
    }
}
